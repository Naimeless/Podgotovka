<Page x:Class="podgotovka.Auth"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:podgotovka"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Auth">

    <Grid>
        <TextBox x:Name="LoginBox" HorizontalAlignment="Center" Margin="0,194,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="204" Height="22"/>
        <PasswordBox x:Name="PasswordBox" HorizontalAlignment="Center" Margin="0,233,0,0" VerticalAlignment="Top" Width="204" Height="21"/>
        <Label Content="Введите логин и пароль" HorizontalAlignment="Center" Margin="0,114,0,0" VerticalAlignment="Top" FontSize="24" FontFamily="Garamond"/>
        <Button x:Name="SigninButton" Content="Отправить" HorizontalAlignment="Center" Margin="0,283,0,0" VerticalAlignment="Top" Height="23" Width="92" Click="SigninButton_Click"/>
    </Grid>
</Page>
